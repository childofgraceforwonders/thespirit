                        <a href="https://www.biblegateway.com/resources/sermon-on-the-mount/overview" class="hover:text-blue-600 transition-colors" target="_blank" rel="noopener noreferrer">Bible Gateway - Sermon on the Mount Overview</a>
                    </div>
                </footer>
            </main>
        </div>
    </div>
    
    <script>
        const modal = document.getElementById('insightModal');
        const modalTitle = document.getElementById('modalTitle');
        const modalContent = document.getElementById('modalContent');
        const modalLoading = document.getElementById('modalLoading');
        const highlights = document.querySelectorAll('.highlight');
        
        // --- Static Modal Logic ---
        highlights.forEach(highlight => {
            highlight.addEventListener('click', (e) => {
                e.preventDefault();
                modalTitle.textContent = highlight.getAttribute('data-title');
                modalContent.textContent = highlight.getAttribute('data-content');
                modalLoading.style.display = 'none';
                modalContent.style.display = 'block';
                modal.classList.remove('hidden');
            });
        });

        function closeModal() {
            modal.classList.add('hidden');
        }

        window.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                closeModal();
            }
        });
        
        // --- Gemini API Integration ---
        
        /**
         * Calls the Gemini API to generate content.
         * @param {string} prompt The prompt to send to the Gemini API.
         */
        async function callGemini(prompt) {
            // Display the modal and the loading spinner
            modal.classList.remove('hidden');
            modalLoading.style.display = 'flex';
            modalContent.style.display = 'none';
            modalContent.textContent = ''; // Clear previous content

            const apiKey = "AIzaSyDau5t4329ezFMf1zF6AFKPZazW6QFvRhY"; // API Key will be injected by the environment
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            const payload = {
                contents: [{
                    role: "user",
                    parts: [{ text: prompt }]
                }]
            };

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`API request failed with status ${response.status}`);
                }

                const result = await response.json();
                
                let text = "Sorry, I couldn't generate a response. Please try again.";
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    text = result.candidates[0].content.parts[0].text;
                }
                
                modalContent.textContent = text;

            } catch (error) {
                console.error("Gemini API Error:", error);
                modalContent.textContent = `An error occurred: ${error.message}. Please check the console for details.`;
            } finally {
                // Hide loading spinner and show content
                modalLoading.style.display = 'none';
                modalContent.style.display = 'block';
            }
        }

        /**
         * Generates a reflection for a specific section.
         * @param {string} sectionId The ID of the section element.
         */
        function generateReflection(sectionId) {
            const section = document.getElementById(sectionId);
            const contentElement = section.querySelector('.prose-content');
            if (!contentElement) {
                console.error("Could not find content for section:", sectionId);
                return;
            }
            
            const sectionText = contentElement.innerText;
            const sectionTitle = section.querySelector('h2').innerText;

            const prompt = `Please generate a short, personal reflection or prayer based on the following teaching from Jesus' Sermon on the Mount, titled "${sectionTitle}". Help the reader understand how to apply these principles to their life today in a practical, modern context. Keep the tone reverent, personal, and encouraging.\n\nHere is the text for context:\n\n---\n${sectionText}\n---`;
            
            modalTitle.textContent = `✨ Reflection on ${sectionTitle}`;
            callGemini(prompt);
        }
        
        /**
         * Asks a question using the Q&A input field.
         */
        function askQuestion() {
            const userInput = document.getElementById('qa-input').value;
            if (!userInput.trim()) {
                alert("Please enter a question.");
                return;
            }

            // For context, we can provide the introduction text
            const sermonIntro = document.getElementById('introduction').innerText;

            const prompt = `A user is asking a question about the Sermon on the Mount. Please provide a helpful, clear, and biblically-grounded answer. You can reference the overall themes and teachings of the sermon to inform your response.

            Here is some context from the introduction of the sermon study they are reading:
            "${sermonIntro}"

            Here is the user's question:
            "${userInput}"`;

            modalTitle.textContent = `✨ Answering Your Question`;
            callGemini(prompt);
        }

    </script>
</body>
</html>
